@using BlogShadan.Helper
@model IEnumerable<Post>
@{
    ViewData["Ttile"] = "Blog Posts";
}
<div class="text-center m-2">
    @if (ViewBag.Categories != null)
    {
        foreach (var Category in ViewBag.Categories)
        {
            <a asp-controller="Post" asp-action="Index" asp-route-categoryID="@Category.Id" class="badge bg-warning text-decoration-none ms-2">
                @Category.Name
            </a>
        }
    }

</div>
<div class="text-end my-2">
    <a class="btn btn-primary" asp-action="create" asp-controller="Post">Create New Post</a>
</div>
<div class="row row-cols-3 g-4">
    @foreach (var post in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-lg border-0 rounded-1">
                <img src="@post.FeatureImagePath" class="card-img-top"
                     alt="@post.Title" style="height:300px; object-fit:cover" />

                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="text-muted mb-2">Published On @post.PublishedDate.ToString("MMM,dd,yyyy")</p>
                    @{
                        var content = RemoveHTMLTagHelper.RemoveHTMLTag(post.Content);
                    }
                    <p class="card-text">
                        @(content.Length>100? content.Substring(0,100)+"..." : content)
                    </p>
                    <span class="badge bg-secondary">@post.Category?.Name</span>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <a class="btn btn-primary btn-sm" asp-action="Detail" asp-controller="post" asp-route-id="@post.Id">Read More</a>
                    <div class="text-end">
                        <div class="text-muted">By @post.Author</div>
                    </div>

                </div>
            </div>
           
        </div>
    }

</div>