@model Post
@{
    ViewData["Title"] = "Delete Post";
}

<h2>@ViewData["Title"]</h2>
<h4>Do you want to delete this Post?</h4>
<form asp-action="DeleteConfirm" asp-controller="Post">
    <input asp-for="@Model.Id" hidden />
    <button type="submit" class="btn btn-danger mt-2"> Delete</button>
    <a asp-controller="Post" asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>

</form>