@model EditViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<style>
    .content-wrapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif
    }
</style>
<div class="content-wrapper">
    <div class="row">
        <div class="col-6">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Detail" asp-controller="Post" asp-route-id="@Model.Post.Id">Back to Post</a>
        </div>
    </div>
    <hr />

    <form asp-action="Edit" asp-controller="Post" method="post" enctype="multipart/form-data">
        <div class="validation-summary">
            <div asp-validation-summary="All" class="text-danger">
            </div>

        </div>
        <div class="form-group">
            <input asp-for="Post.Id" hidden/>
            <label asp-for="Post.Title"></label>
            <input asp-for="Post.Title" class="form-control" />
            <span asp-validation-for="Post.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Post.CategoryId"></label>
            <select asp-for="Post.CategoryId" asp-items="Model.Categories" class="form-control">
                <option value="">Select Category</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Post.Author"></label>
            <input asp-for="Post.Author" class="form-control" />
            <span asp-validation-for="Post.Author" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Post.Content"></label>
            <textarea asp-for="Post.Content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Post.Content" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FeatureImage"></label>
            <input asp-for="FeatureImage" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-1" >Update</button>
        <a class="btn btn-primary mt-1" asp-action="Detail" asp-controller="Post" asp-route-id="@Model.Post.Id">Back to Post</a>
    </form>
</div>

@section Scripts{

    <script src="https://cdn.tiny.cloud/1/gxkpegdihhpq6vs9a3aodj2kno9tu8om7jrlmvfksxfcpai3/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
    <script>
                 tinymce.init({
          selector: 'textarea'
        });
    </script>
}